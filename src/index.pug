doctype
html(lang="ja")
  head
    title 職務経歴
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="./style.css", type="text/css")
    <!-- Global site tag (gtag.js) - Google Analytics -->
    script(async, src="https://www.googletagmanager.com/gtag/js?id=UA-114414329-1")
    script.
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'UA-114414329-1');
  body
    div(class="careers")
      header
        h1 職務経歴
      each career in careers
        div
          div(class="career")
            div(class="props")
              span(class="year") #{helper.year(career) + helper.month(career)}
              span(class="period") 期間:#{helper.periodOfProject(career)}
              span(class="member") メンバ:#{helper.memberCount(career)}
              span(class="target") #{career.target}
            h2 #{career.title}
            div(class="phases")
              h3 工程
              each assigned, phase in career.phase
                span(class=["phase", assigned ? "assigned" : ""])  #{dict['phase'][phase]}
            div(class="techs")
              h3 関連技術
              each skill, category in career.skills
                each tech in skill
                  span(class="tech") #{tech}
      footer
        p.
          The source code for this page is on #[a(target="_blank" href="https://github.com/okataku/job-experiences") github].
        p.
          &copy; 2018 #[a(target="_blank" href="https://github.com/okataku/") okataku]
        
